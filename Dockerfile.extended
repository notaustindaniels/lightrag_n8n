FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Clone LightRAG repository
RUN git clone https://github.com/HKUDS/LightRAG.git /tmp/lightrag

# Install Python packages
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r /tmp/lightrag/requirements.txt && \
    pip install --no-cache-dir /tmp/lightrag[api] && \
    pip install --no-cache-dir fastapi uvicorn[standard] python-multipart aiofiles wcwidth

# Create necessary directories
RUN mkdir -p /app/data/rag_storage /app/data/inputs /app/custom_api

# Copy custom API extension
COPY custom_api_extension.py /app/custom_api/

# Create environment file
RUN echo "WORKING_DIR=/app/data/rag_storage\n\
INPUT_DIR=/app/data/inputs\n\
HOST=0.0.0.0\n\
PORT=9621\n\
EMBEDDING_BINDING=openai\n\
EMBEDDING_MODEL=text-embedding-ada-002\n\
LLM_BINDING=openai\n\
LLM_MODEL=gpt-4o-mini" > /app/.env

# Create an extended startup script
RUN echo '#!/bin/bash\n\
cd /app\n\
# Start the custom API extension server\n\
exec python /app/custom_api/custom_api_extension.py\n' > /app/start.sh && \
    chmod +x /app/start.sh

EXPOSE 9621

CMD ["/app/start.sh"]